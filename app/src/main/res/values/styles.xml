<resources>
    <style name="CalcButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CalcButtonDigit" parent="CalcButton">
        <item name="android:background">@color/calc_digit_bg</item>
        <item name="android:textColor">@color/calc_result_fg</item>
    </style>

    <style name="CalcButtonAction" parent="CalcButton">
        <item name="android:background">@color/calc_action_bg</item>
        <item name="android:textColor">@color/calc_result_fg</item>
    </style>

    <style name="CalcButtonEqual" parent="CalcButton">
        <item name="android:background">@color/calc_equal_bg</item>
        <item name="android:textColor">@color/calc_result_fg</item>
    </style>
</resources>